<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dept.DeptMapper2"> <!--mapper에게 이름부여  -->
<!-- parameter: 조회결과, result:결과반환 -->

	<delete parameterType="int" id="deptDelete">
	delete from dept where deptno= #{deptno}
	 </delete>
 	 <insert id="deptInsert" parameterType="Dept">
  		insert into dept (deptno, dname, loc) values
  		(#{deptno}, #{dname}, #{loc})
  	 </insert> 
  
 	 <update id="updateDept" parameterType="Dept">
		update Dept set dname=#{dname}, loc=#{loc} where deptno = #{deptno}
	 </update>
                                                                
  <select id="selectAll" resultType="Dept"><!-- 결과를 Dept의 List형태로 -->
    select deptno, dname, loc from dept
  </select>


	<select id="selectCount" resultType="int" >
		select count(*) from dept
	</select>
	
	<select id="selectByHashMap" parameterType="java.util.HashMap" resultType="Dept">
		select * from dept where deptno between #{key1} and #{key2} 
	</select>
	
	<select id="selectBydeptNoIn" parameterType="hashmap" resultType="Dept" >
		select * from dept where deptno in (#{A}, #{B}, #{C})

	</select>

	<select id="selectByDeptnoHashMap" parameterType="int" resultType="hashmap">
		select * from dept where deptno=#{deptno}
	</select>
 
</mapper>