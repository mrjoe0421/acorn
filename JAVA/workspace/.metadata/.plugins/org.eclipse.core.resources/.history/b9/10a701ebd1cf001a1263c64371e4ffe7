
public class MyTest01 {

	public static void main(String[] args) {
		String name = "홍길동";
		int age = 20;
		String loc = "서울";
		
		System.out.println("이름은 " + name +
		"\n나이는 " + age + "이고 " + "주소는 " + loc);
		System.out.print("이름은 " + name);
		System.out.print("\n나이는 " + age + "주소는 " + loc);
		
		System.out.printf("\n%s , %d , %s", "이름은 " + name + "\n나이는 " + age + "주소는 "  + loc);

	}

}
